{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "jsx": "react",
        "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
